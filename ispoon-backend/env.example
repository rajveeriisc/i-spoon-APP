# ===========================================
# iSpoon Backend Environment Configuration
# ===========================================

# Application
NODE_ENV=development
PORT=5000
APP_NAME=SmartSpoon
APP_BASE_URL=http://localhost:5000

# Database (NeonDB PostgreSQL)
DATABASE_URL=postgresql://username:password@host:5432/database

# JWT Tokens
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRY=15m

# Firebase Admin SDK
FIREBASE_SERVICE_ACCOUNT_PATH=./secrets/serviceAccount.json

# Note: Email verification is handled by Firebase Client SDK in Flutter app
# No email service needed on backend

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Password & Token Settings
PASSWORD_SALT_ROUNDS=12
PASSWORD_RESET_TOKEN_TTL_MINUTES=60
EMAIL_VERIFICATION_TOKEN_TTL_MINUTES=1440

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./storage/uploads

